"""
Assembly rules

The inputs are:
    - trimmed reads in fastq format
The outputs are:
    - assembled contigs in fasta format
"""

rule spades:
    input:
        "02_subsampled/{sample}.fastq"
    output:
        directory("03_spades/{sample}")
    log:
        "logs/03_spades/{sample}.log"
    shell:
        "spades.py -o {output} -s {input} > {log}"